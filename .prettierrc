{
	"trailingComma": "none",
	"tabWidth": 2,
	"useTabs": true,
	"semi": false,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"arrowParens": "avoid",
	"importOrder": [
		"<THIRD_PARTY_MODULES>",

		"^@/assets/(.*)$",
		"^@/pages/(.*)$",
		"^@/ui/(.*)$",

		"^@/services/(.*)$",
		"^@/utils/(.*)$",
		"^@/config/(.*)$",

		"^@/hooks/(.*)$",
		"^@/store/(.*)$",

		"^../(.*)",
		"^./(.*)",

		"(.{css, scss})$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"plugins": ["@trivago/prettier-plugin-sort-imports"]
}
